    "/api/notes/": {
      "post": {
        "tags": [
          "Notes"
        ],
        "summary": "API for creating a new Note",
        "description": "User can create a new Note using title, content, attachments, priority, deadline, status",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Note data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "example": "title of the note"
                },
                "content": {
                  "type": "string",
                  "example": "<p>Hello world</p>"
                },
                "priority": {
                  "type": "string",
                  "example": "low"
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      },
      "get": {
        "tags": [
          "Notes"
        ],
        "summary": "API for fetching the notes",
        "description": "User can fetch the notes filtered with priority, status or deadline",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Filtering data",
            "required": false,
            "schema": {
              "type": "object",
              "properties": {
                "priority": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "example": "string"
                    },
                    "example": {
                      "type": "string",
                      "example": "low"
                    }
                  }
                },
                "deadline": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "example": "string"
                    },
                    "example": {
                      "type": "string",
                      "example": "2024-07-01T10:56:25.322+00:00"
                    }
                  }
                },
                "status": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "example": "string"
                    },
                    "example": {
                      "type": "string",
                      "example": "not_started"
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      },
      "put": {
        "tags": [
          "Notes"
        ],
        "summary": "API for updating a note",
        "description": "User can edit a note using the related data",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Note data",
            "required": true,
            "schema": {
              "type": "object",
